<% title "Documents" %>
<div class="container">
	<div class="row add ">
	<center>
		<%= link_to image_tag("add.png",size:"50x50",class:"hvr-pulse-grow"), {:controller => 'documents', :action => 'new'} %>
	</center>
		
	</div>
	<div class="row">
		<% for document in @documents %>
		  <div class="document hvr-grow">
		  	<div class="row">
		  		<div class="col-xs-12">
		  			<center><h2 class="titles"><%= link_to document.name, document %></h2></center>
		  		</div>
		  	</div>
		  	<center>
		  	<div class="row image">
		      <%=link_to image_tag(document.image_url,size:"200x250"),document if document.image? %>
		    </div>
		  	</center>
		    
		  </div>
		<% end %>
	</div>
	
</div>


  